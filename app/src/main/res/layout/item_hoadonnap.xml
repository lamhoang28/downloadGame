<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_itemHoaDonNap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:backgroundTint="#00F44336">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00F44336"
        app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_nameMemberNap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Người nạp"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textColor="#aad8f5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_coinNap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền nạp"
                    android:padding="3dp"
                    android:textColor="#aad8f5"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_item_AdminThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản trị viên thanh toán"
                    android:textColor="#aad8f5"
                    android:padding="3dp"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aad8f5"
                    android:id="@+id/tv_item_ngaynap"
                    android:textSize="16dp"
                    android:padding="3dp"
                    android:text="Ngày Nạp"/>
                <TextView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aad8f5"
                    android:id="@+id/tv_item_noidungnap"
                    android:textSize="16dp"
                    android:padding="3dp"
                    android:text="Nội dung"/>
            </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>