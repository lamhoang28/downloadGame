<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_itemtintuc"
    android:padding="9dp"
    android:background="@drawable/boder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:cardElevation="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/img_hinhAnhDownLoad"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/csgo"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_DownLoadApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#86AA06"
            android:textColor="#DBF861"
            android:textStyle="bold"
            android:padding="12dp"
            android:text="DownLoad APK"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mời người khác chơi cùng:"
        android:id="@+id/tv_thua"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#aad8f5"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_dialog"
        />
    <View
        android:layout_width="399dp"
        android:layout_height="1dp"
        android:background="#00AEDBF0"/>
</LinearLayout>