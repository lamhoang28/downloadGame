<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_itemComment"
    android:backgroundTint="#00F44336"
    android:layout_margin="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00F44336"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_item_imgMember"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_item_nameMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textAllCaps="true"
                    android:text="aaaa"
                    android:textColor="#aad8f5"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_titleMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="italic"
                    android:textColor="#aad8f5" />

                <TextView
                    android:id="@+id/tv_item_ngaycmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ngÃ y cmt"
                    android:textColor="#aad8f5"
                    android:paddingTop="10dp"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_delete_Comment"
            android:src="@android:drawable/ic_delete"
            android:layout_gravity="end"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>