<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SwipeRefreshLayout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_create"
    tools:context=".Tab_Apps.Frag_Home">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_home"
            android:fontFamily="sans-serif-light"
            android:text=" Trang Chủ"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:textColor="#beddf2"
            android:textSize="18dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_title_caidat"
            android:background="#beddf2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Tin Tức Nổi Bật"
            android:textSize="16dp"
            android:id="@+id/tv_tintuc"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:textColor="#e5e5e5"
            android:background="@drawable/boder_light"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:id="@+id/recyclerView_Home_TinTuc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Game Thịnh Hành"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textColor="#e5e5e5"
            android:id="@+id/tv_game"
            android:background="@drawable/boder_light"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:id="@+id/recyclerView_Home_Game"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Ứng Dụng Nổi Bật"
            android:textSize="16dp"
            android:id="@+id/tv_ungdung"
            android:textAllCaps="true"
            android:textColor="#e5e5e5"
            android:background="@drawable/boder_light"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:id="@+id/recyclerView_Home_Apps"/>

    </LinearLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>