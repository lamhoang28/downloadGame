<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="9dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_dialog_content_thanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/boder_cauhoi"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingTop="62dp"
        android:paddingEnd="12dp"
        android:paddingBottom="62dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_dialog_title_thanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/boder_bottom_dialog_thanhtoan"
        android:gravity="center"
        android:padding="19dp"
        android:text="Xác Nhận Thanh Toán"
        android:textAllCaps="true"
        android:textColor="#beddf2"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_dialog_yes_thanhToan"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_below="@+id/tv_dialog_content_thanhToan"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-35dp"
        android:background="@drawable/boder_sothutu"
        android:gravity="center"
        android:text="Xác nhận"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_dialog_no_thanhToan"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_below="@+id/tv_dialog_content_thanhToan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-35dp"
        android:background="@drawable/boder_sothutu"
        android:gravity="center"
        android:text="Hủy"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>