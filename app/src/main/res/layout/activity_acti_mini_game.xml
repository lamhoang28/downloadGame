<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="9dp"
    tools:context=".Tab_Apps.MiniGame.Acti_MiniGame">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mini Game"
        android:textSize="32dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/abc"/>

    <TextView
        android:id="@+id/tv_dialog_coinALTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mini Game"
        android:textSize="32dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFC107"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cauHoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingTop="62dp"
            android:paddingBottom="62dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:background="@drawable/boder_cauhoi"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_soThuTu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/boder_sothutu"
            android:gravity="center"
            android:padding="19dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>



    <TextView
        android:id="@+id/tv_dapAn_A"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/boder_cauhoi"
        android:padding="9dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/tv_dapAn_B"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/boder_cauhoi"
        android:padding="9dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/tv_dapAn_C"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/boder_cauhoi"
        android:padding="9dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFEB3B"/>





</LinearLayout>