<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_create"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Tab_Apps.Frag_HoTro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Nhập câu hỏi của bạn dành cho quản trị viên"
        android:textColor="#beddf2"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text=" Câu hỏi:  "
            android:textColor="#beddf2"
            android:textSize="19dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_hotro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_edittext"
            android:padding="9dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:layout_width="199dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:backgroundTint="#b7dff5"
        android:id="@+id/btn_hotro"
        android:text="Gửi câu hỏi cho quản trị viên"
        android:textColor="#213549" />

</LinearLayout>